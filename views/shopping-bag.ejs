<%- include("partials/head", title="Shopping")  %>
<body>
    <%- include("partials/header")  %>
        <main>
            <section class="shopping-bag">
                <h1>MI BOLSA</h1>
                <hr>
                <div class="selected-products">
                    <article class="selected-product">
                        <div class="container-img">
                            <img src="images/Remera Aros.jpg" alt="imagen-producto" class="product_img">
                        </div>
                        <div class="description-article">
                            <h3>Remera Aros</h3>
                            <p class="color">NEGRA</p>
                            <p class="talle">3</p>
                            <div class="quantity">
                                <input type="number" name="quantity" min="1" placeholder="1" class="form-control">
                            </div>
                            <p class="price">$18.000</p>
                        </div>
                        <button class="remove">
                            <i class="fa-solid fa-circle-xmark"></i>
                        </button>
                    </article>
                    <article class="selected-product">
                        <div class="container-img">
                            <img src="images/Remera Kanal.jpg" alt="imagen-producto" class="product_img">
                        </div>
                        <div class="description-article">
                            <h3>Remera Kanal</h3>
                            <p class="color">ROJA</p>
                            <p class="talle">3</p>
                            <div class="quantity">
                                <input type="number" name="quantity" min="1" placeholder="1" class="form-control">
                            </div>
                            <p class="price">$15.000</p>
                        </div>
                        <button class="remove">
                            <i class="fa-solid fa-circle-xmark"></i>
                        </button>
                    </article>
                    <article class="selected-product">
                        <div class="container-img">
                            <img src="images/Remera Zeta.jpg" alt="imagen-producto" class="product_img">
                        </div>
                        <div class="description-article">
                            <h3>Remera Zeta</h3>
                            <p class="color">BLANCA</p>
                            <p class="talle">2</p>
                            <div class="quantity">
                                <input type="number" name="quantity" min="1" placeholder="1" class="form-control">
                            </div>
                            <p class="price">$11.000</p>
                        </div>
                        <button class="remove">
                            <i class="fa-solid fa-circle-xmark"></i>
                        </button>
                    </article>
                    <article class="selected-product">
                        <div class="container-img">
                            <img src="images/Short Engomado.jpg" alt="imagen-producto" class="product_img">
                        </div>
                        <div class="description-article">
                            <h3>Short Engomado</h3>
                            <p class="color">NEGRO</p>
                            <p class="talle">36</p>
                            <div class="quantity">
                                <input type="number" name="quantity" min="1" placeholder="1" class="form-control">
                            </div>
                            <p class="price">$22.000</p>
                        </div>
                        <button class="remove">
                            <i class="fa-solid fa-circle-xmark"></i>
                        </button>
                    </article>
                </div>
                <button class="remove-bag">
                    <hr>
                    <i class="fa-solid fa-trash"> Vaciar Bolsa</i>
                </button>
                <div class="detail">
                    <h1>DETALLE</h1>
                    <hr>
                </div>
                <br>
                <br>
                <div class="subtotal-price">
                    <p>UNIDADES</p>
                    <p class="detail-right">4</p>
                    <strong>SUBTOTAL</strong>
                    <p class="detail-right">
                        <strong>$78.987</strong>
                    </p>
                    <div class="installments-center">
                        <span class="installments" style="line-height: 1.5;"> 
                            Hasta 6 cuotas sin interes de
                            <strong>$16.453</strong>
                        </span>
                        <br>
                        <span class="installments" style="line-height: 1.5;">
                            o 12 cuotas fijas de 
                            <strong>$8.226</strong>
                        </span>
                    </div>
                    <br>
                    <br>
                    <button class="button-to-pay">Pagar</button>
                    <button class="button-to-buying">Continuar comprando</button>
                    <br>
                    <br>

                </div>
            </section>   
        </main>
        <footer>
            <section class="rights">
                <p>Copyright Â© 1999-2020 MY WAY S.R.L.</p>
            </section>
        </footer>
    </body>
</html>